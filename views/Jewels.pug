
extends layout

block content
  h1= title
  <br>
   a(href='/Jewels/create')
     button.btn(class="btn btn-success") Create
  -
  - let result=results
  div(class="container-fluid")
   
     div(class='row m-1')
        each item,index in result
            -let destination = `dispatch(\"/Jewels/update?id=${item._id}\")`
            -let deleteView = `dispatch(\"/Jewels/delete?id=${item._id}\")`
            -let detailView = `dispatch(\"/Jewels/detail?id=${item._id}\")`
            div.col-sm-2(onclick=`buy(${index})`) Jewels name: #{item["Jewels_name"]}  <br>  Jewels_size: #{item["Jewels_size"]} <br> Jewels_type: #{item["Jewels_type"]} 
            button.btn(class="btn-primary ml-1", onclick = destination) Update
            button.btn(class="btn-primary ml-1", onclick = detailView) Details
            button.btn(class="btn-primary ml-1", onclick = deleteView) Delete
  script.
      function buy(index){
         alert("you purchased item "+(index+1))
      }
  script.
      function dispatch(path){
      window.location.href=path
      }
